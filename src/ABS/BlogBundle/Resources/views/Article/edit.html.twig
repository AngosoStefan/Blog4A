{% extends "::base.html.twig" %}
{% block body %}
<h1>Editer un article</h1>

<form class="editform" action="{{path("abs_blog_edit_article" , { id: article.id}) }}" method="post" enctype="multipart/form-data">
	<div class="row">
		<div class="col-lg-offset-1 col-lg-2 justify" >
			<b>Titre:</b>
		</div>
		<div class="col-lg-6 justify">
			{{ form_widget(form.title) }}
		</div>
	</div>

	<div class="row">
		<div class="col-lg-offset-1 col-lg-2 justify" >
			<b>Description:</b>
		</div>
		<div class="col-lg-6 justify">
			{{ form_widget(form.description) }}
		</div>
	</div>

	<div class="row">
		<div class="col-lg-offset-1 col-lg-2 justify" >
			<b>Image:</b>
		</div>
		<div class="col-lg-6	">
			{{ form_widget(form.file, {'attr': {'onChange':'readURL(this);'}}) }}
			{% if article.path == NULL %}
				<img id="preview" src="{{ asset('uploads/default/default.png') }}" width="100%"  />
			{% else %}
				<img id="preview" src="{{ asset('uploads/articles/'~article.id~'.'~article.path) }}" width="100%" />
			{% endif %}
		</div>
	</div>

	<div class="row">
		<div class="col-lg-offset-6 col-lg-2 " >
			{{form_rest(form)}}
			<input type="submit">
		</div>
	</div>
	
</form>

{% endblock %}