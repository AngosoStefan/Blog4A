{% extends "::base.html.twig" %}
{% block body %}
<h1>Ajouter un article</h1>

<form action="{{path("abs_blog_add_article") }}" method="post" enctype="multipart/form-data">
	<div class="row">
		<div class="col-lg-offset-1 col-lg-2 justify" >
			<b>Titre:</b>
		</div>
		<div class="col-lg-6 justify">
			{{ form_widget(form.title) }}
		</div>
	</div>

	<div class="row">
		<div class="col-lg-offset-1 col-lg-2 justify" >
			<b>Description:</b>
		</div>
		<div class="col-lg-6 justify">
			{{ form_widget(form.description) }}
		</div>
	</div>

	<div class="row">
		<div class="col-lg-offset-1 col-lg-2 justify" >
			<b>Image:</b>
		</div>
		<div class="col-lg-2">
			{{ form_widget(form.file, {'attr': {'onChange':'readURL(this);'}}) }}
				<img id="preview" src="{{ asset('uploads/default/default2.png') }}" width="100%"  />
		</div>
	</div>
	<div class="row">
		<div class="col-lg-offset-6 col-lg-2 " >
			<input type="submit">
		</div>
	</div>


</form>

{% endblock %}