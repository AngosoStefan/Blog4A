{% extends "::base.html.twig" %}
{% block body %}
<h1>Editer une célébrité</h1>

<form action="{{path("abs_blog_edit_celebrity", { name: celebrity.name}) }}" method="post" enctype="multipart/form-data">

	<div class="row">
		<div class="col-lg-offset-1 col-lg-2 justify" >
			<b>Nom:</b>
		</div>
		<div class="col-lg-6 justify">
			{{ form_widget(form.name) }}
		</div>
	</div>

	<div class="row">
		<div class="col-lg-offset-1 col-lg-2 justify" >
			<b>Date de Naissance:</b>
		</div>
		<div class="col-lg-6 justify">
			{{ form_widget(form.dateOfBirth) }}
		</div>
	</div>

	<div class="row">
		<div class="col-lg-offset-1 col-lg-2 justify" >
			<b>Image:</b>
		</div>
		<div class="col-lg-2">
			{{ form_widget(form.file, {'attr': {'onChange':'readURL(this);'}}) }}
			{% if celebrity.path == NULL %}
				<img id="preview" src="{{ asset('uploads/default/default.png') }}" height="200px"/>
			{% else %}
				<img id="preview" src="{{ asset('uploads/celebrities/'~celebrity.name~'.'~celebrity.path) }}" height="200px"/>
			{% endif %}
		</div>
	</div>

	{{form_rest(form)}}

	<input type="submit">

</form>

{% endblock %}