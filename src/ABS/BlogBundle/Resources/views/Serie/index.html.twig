{% extends "::base.html.twig" %}
{% block body %}
	<link href="{{ asset('lightbox/dist/css/lightbox.css') }}" rel="stylesheet">
    <script src="{{ asset('lightbox/dist/js/lightbox.js') }}"></script>
	<h1 id="lowtitle">SERIES</h1>
	{% if app.user=="admin" %}
		<div class="row">
			<div class=" col-lg-5 arttitle">
				<h3><a href="{{ path("abs_blog_add_serie") }}">+ Ajouter un s√©rie</a></h3>
			</div>
		</div>
	{% endif %}

	<div class="row">   
		<div class="col-lg-offset-1 col-lg-10">
			<table>
				<tr>
				{% for letter in 'A'..'M' %}
					<td class="letter"><a href="{{ path("abs_blog_seriesbyletter", { c: letter}) }}"><h3>{{letter}}</h3></a></td>
				{% endfor %}
				</tr>
				<tr>
				{% for letter in 'N'..'Z' %}
					<td class="letter"><a href="{{ path("abs_blog_seriesbyletter", { c: letter}) }}"><h3>{{letter}}</h3></a></td>
				{% endfor %}
				</tr>
				<tr>	
					<td class="letter"><a href="{{ path("abs_blog_series") }}"><h3>All</h3></a></td>
				</tr>
			</table>
		</div>
	</div>

	<div class="row">
		{% for serie in series %}
		<div class="col-lg-3 zone">
			<article>
				{% if serie.path %}
				<a href="{{ asset('uploads/series/'~serie.id~'.'~serie.path) }}" data-lightbox="images" data-title="{{serie.name}}" ><img class="picture" src="{{ asset('uploads/series/'~serie.id~'.'~serie.path) }}" /></a>
				{% endif %}
				<br>
				<a href="{{ path("abs_blog_show_serie", { id: serie.id}) }}">{{serie.name}}</a>
			</article>
		</div>
		{% endfor %}
	</div>
{% endblock %}